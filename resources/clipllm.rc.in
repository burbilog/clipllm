            VALUE "ProductVersion", "@PROJECT_VERSION@"
            VALUE "LegalCopyright", "Copyright (C) 2026 Roman V. Isaev"
            VALUE "License", "GNU GPL v3"
        END
    END
    BLOCK "VarFileInfo"
    BEGIN
        VALUE "Translation", 0x409, 1200
    END
